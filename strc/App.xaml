<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="strc.App">
	<Application.Resources>
		<!-- Application resource dictionary -->

		<ResourceDictionary>
			<Style x:Key="menuItemButton" TargetType="Button">
				<Setter Property="VerticalOptions" Value="Center" />
				<Setter Property="Margin" Value="10,0,10,0" />
				<Setter Property="HeightRequest" Value="300" />
			</Style>
			<Style x:Key="menuItemView1" TargetType="ContentView">
				<Setter Property="BackgroundColor" Value="#836186" />
			</Style>
			<Style x:Key="menuItemView2" TargetType="ContentView">
				<Setter Property="BackgroundColor" Value="#CCD256" />
			</Style>
			<Style x:Key="pageLayout" TargetType="StackLayout">
				<Setter Property="Margin" Value="10,10,10,10" />
				<Setter Property="Spacing" Value="15" />
			</Style>
			<Style x:Key="pageTitle" TargetType="Label">
				<Setter Property="FontAttributes" Value="Bold" />
				<Setter Property="FontSize" Value="25" />
				<Setter Property="TextColor" Value="#836186" />
			</Style>
			<Style x:Key="pageText" TargetType="Label">
				<Setter Property="LineBreakMode" Value="WordWrap" />
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>
